#!/usr/bin/env bash
set -e

system-bootstrap() {
    local base_path="$(cd "$(dirname "$0")/.." && pwd)"

    usage() {
        cat << USAGE
Usage:
  system-bootstrap [command]

Available Commands:
  run             installs system packages, configures the system and links dotfiles

Flags:
  -h, --help     shows this help message
  -v, --version  shows the version of system-bootstrap
USAGE
    }

    while [[ "$1" == * ]] ; do
        case "$1" in
            -h | --help )
                usage
                return
                ;;
            -v | --version )
                echo "system-bootstrap version 1.0.2"
                return
                ;;
            -- )
                shift
                break
                ;;
            -* )
                echo "failed parsing option '$1'" >&2
                return
                ;;
            * )
                break
                ;;
        esac
        shift
    done

    local subcommand=$1
    if [ $# -gt 0 ]; then
        shift
    fi

    case "$subcommand" in
        run )
            bash "$base_path/share/system-bootstrap/run" "$@"
            ;;
        * )
            echo "Unknown command '$subcommand'" >&2
            return
            ;;
    esac

}

system-bootstrap "$@"
